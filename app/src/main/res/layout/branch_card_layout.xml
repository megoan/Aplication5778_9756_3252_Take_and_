<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardPreventCornerOverlap="false"
    android:layout_marginTop="10dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:transitionName="branchImage"
            android:clickable="false"
            app:srcCompat="@drawable/rental" />
            <ProgressBar
                android:id="@+id/downloadProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            >
            <TextView
                android:id="@+id/cardBranchCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:longClickable="false"
                android:text="Bet Shemesh dsfjdkslfjshgdfhsdkjfsdjgfdshjfksdjf\nsdfsdfsdf\nrfgtfdgfd\n"
                android:textColor="@android:color/black"
                android:textSize="13sp"

                />
            <View
                android:id="@+id/line2"
                android:layout_width="169dp"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="#c0c0c0"
                android:clickable="false"
                android:longClickable="false"
            />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="99dp"
                    android:layout_height="17dp"
                    android:clickable="false"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:longClickable="false"
                    android:text="branch revenue:"
                    />
                <TextView
                    android:layout_marginLeft="4dp"
                    android:id="@+id/cardBranchRevenue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:longClickable="false"
                    android:text="15,000$"
                    android:textColor="@color/colorPrimary"
         />
            </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/text2"
                   android:layout_width="99dp"
                   android:layout_height="17dp"
                   android:clickable="false"
                   android:ems="10"
                   android:inputType="textPersonName"
                   android:longClickable="false"
                   android:text="number of cars:"
             />
               <TextView
                   android:layout_marginLeft="4dp"
                   android:id="@+id/cardBranchCarNum"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:clickable="false"
                   android:longClickable="false"
                   android:text="38"
                   android:textColor="@color/colorPrimary"
             />
           </LinearLayout>
            <View
                android:id="@+id/line1"
                android:layout_width="169dp"
                android:layout_height="1dp"
                android:background="#c0c0c0"
                android:clickable="false"
                android:longClickable="false"
                android:layout_marginTop="4dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/cardBranchN"
                    android:layout_width="72dp"
                    android:layout_height="17dp"
                    android:clickable="false"
                    android:inputType="textPersonName"
                    android:longClickable="false"
                    android:text="branch number:"
                    android:textSize="10sp"
      />

                <TextView
                    android:layout_marginLeft="4dp"
                    android:id="@+id/cardBranchNumber"
                    android:layout_width="72dp"
                    android:layout_height="17dp"
                    android:clickable="false"
                    android:inputType="textPersonName"
                    android:longClickable="false"
                    android:text="#567657"
                    android:textSize="10sp"
        />
            </LinearLayout>
        </LinearLayout>
        <ImageButton
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:id="@+id/cardBranchInUse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_in_use"
            android:layout_gravity="end"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
